<div class="row part-form">
    <form class="col s12 ">
      <div class="row">
        <div class="input-field col s4">
          <label for="part_number">Part Number</label>
          <input  id="part_number" type="text" class="validate">
        </div>
        <div class="input-field col s4">
          <label for="part_name">Part Name</label>
          <input id="part_name" type="text" class="validate">
        </div>
        <div class="input-field col s4">
          <label for="quantity">Quantity</label>
          <input id="quantity" type="number" class="validate">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <label for="textarea1">Description</label>
          <textarea id="textarea1" class="materialize-textarea center-align"></textarea>
        </div>
      </div>
        <div class="row">
        
      </div>
      <div class="row">
        <div class="col s12 right ">
            <button class="btn waves-effect waves-light submit-btn" type="submit" name="action">Submit
                <i class="fas fa-paper-plane"></i>
            </button>
            {{!-- <a class="waves-effect waves-light btn-large">Save<i class="far fa-save"></i></a> --}}
        </div>
      </div>
    </form>
  </div>

<div >
<table class = "parts-table" id = "parts-table">
    <col style="width:8%">
    <col style="width:17%">
    <col style="width:20%">
    <col style="width:40%">
    <col style="width:15%">
    <th></th>
    <th>Part Number</th>
    <th>Part Name</th>
    <th>Description</th>
    <th>Quantity</th>
    {{#each parts}}
    <tr class="part" data-partNum ={{part-number}} data-partName={{part-name}} data-description={{description}} data-quantity={{quantity}}>
        <td class = "part-action"><i class="far fa-edit"></i> <i class="far fa-save"></i> <i class="far fa-trash-alt"></i></td>
        <td class = "part-number"><input type="hidden" name="id" id="id" value="{{id}}">{{part_number}}</td>
        <td class = "part-name">{{part_name}}</td>
        <td class = "desc">{{description}}</td>
        <td class = "quantity">{{quantity}}</td>
        
    </tr>
    {{/each}}
</table>
</div>

