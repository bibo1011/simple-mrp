{{!-- Parts Table --}}
<div class="parts-table-container">
    <table class="head">
        <col style="width:8%">
    <col style="width:17%">
    <col style="width:20%">
    <col style="width:40%">
    <col style="width:15%">
        <tr>
            <td></td>
            <td>Part Number</td>
            <td>Part Name</td>
            <td>Description</td>
            <td>Quantity</td>
        </tr>
    </table>
<table class = "parts-table" id = "parts-table">
    <col style="width:8%">
    <col style="width:17%">
    <col style="width:20%">
    <col style="width:40%">
    <col style="width:15%">
    
    {{#each parts}}
    <tr class="part" data-partNum ={{part-number}} data-partName={{part-name}} data-description={{description}} data-quantity={{quantity}}>
        <td class = "part-action"><i class="far fa-edit"></i> <i class="far fa-save"></i> <i class="far fa-trash-alt"></i></td>
        <td class = "part-number">{{part_number}}</td>
        <td class = "part-name">{{part_name}}</td>
        <td class = "desc">{{description}}</td>
        <td class = "quantity">{{quantity}}</td>
        
    </tr>
    {{/each}}
</table>
</div>
