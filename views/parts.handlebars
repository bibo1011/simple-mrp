 {{!-- Alert Modal --}}

  <!-- Modal Structure -->
  <div id="err-modal" class="modal">
    <div class="modal-content">
      <h4>Duplicate Entry</h4>
      <p>A bunch of text</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>


{{!-- Part Form  --}}

<div class="parts-content">
<div class="row parts-form-container">
    <form class="col s12 part-form">
      <div class="row">
        <div class="input-field col s4">
          <label for="part_number">Part Number</label> 
          <input  id="part_number" type="text" class="validate">
        </div>
        <div class="input-field col s4">
          <label for="part_name">Part Name</label> 
          <input id="part_name" type="text" class="validate">
        </div>
        <div class="input-field col s4">
          <label for="quantity">Quantity</label> 
          <input id="quantity" type="number" class="validate">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <label for="textarea1">Description</label>
          <textarea id="description" class="materialize-textarea center-align"></textarea>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
            <button class="btn waves-effect waves-light submit-btn" type="submit">Submit
                <i class="fas fa-paper-plane"></i>
            </button>
            {{!-- <a class="waves-effect waves-light btn-large">Save<i class="far fa-save"></i></a> --}}
        </div>
      </div>
    </form>
  </div>

{{!-- Parts Table --}}
<div class="parts-table-container">
    <table class="head">
        <col style="width:8%">
    <col style="width:17%">
    <col style="width:20%">
    <col style="width:40%">
    <col style="width:15%">
        <tr>
            <td></td>
            <td>Part Number</td>
            <td>Part Name</td>
            <td>Description</td>
            <td>Quantity</td>
        </tr>
    </table>
<table class = "parts-table" id = "parts-table">
    <col style="width:8%">
    <col style="width:17%">
    <col style="width:20%">
    <col style="width:40%">
    <col style="width:15%">
    
    {{#each parts}}
    <tr class="part" data-partNum ={{part-number}} data-partName={{part-name}} data-description={{description}} data-quantity={{quantity}}>
        <td class = "part-action"><i class="far fa-edit"></i> <i class="far fa-save"></i> <i class="far fa-trash-alt"></i></td>
        <td class = "part-number">{{part_number}}</td>
        <td class = "part-name">{{part_name}}</td>
        <td class = "desc">{{description}}</td>
        <td class = "quantity">{{quantity}}</td>
        
    </tr>
    {{/each}}
</table>
</div>
</div>

