{{!-- Part Form  --}}

<div class="parts-content">
<div class="row parts-form-container">
    <form class="col s12 part-form" id="part-form">
      <div class="row">
        <div class="input-field col s4">
          <label for="part_number">Part Number</label> 
          <input  id="part_number" data-length="10" minlength="10" maxlength="10" type="text" class="validate">
        </div>
        <div class="input-field col s4">
          <label for="part_name">Part Name</label> 
          <input id="part_name" data-length="10" type="text" class="validate">
        </div>
        <div class="input-field col s4">
          <label for="quantity">Quantity</label> 
          <input id="quantity" data-length="10" type="number" class="validate">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <label for="textarea1">Description</label>
          <textarea id="description" class="materialize-textarea center-align validate" data-length='30'></textarea>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
            <button class="btn waves-effect waves-light submit-btn" id="part-form-submit" type="submit" name="action">Submit
                <i class="fas fa-paper-plane"></i>
            </button>
            {{!-- <a class="waves-effect waves-light btn-large">Save<i class="far fa-save"></i></a> --}}
        </div>
      </div>
    </form>
  </div>

