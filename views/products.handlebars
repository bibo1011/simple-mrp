<ul class="collapsible popout">
    {{#each products}}
    {{#if @first}}
    <li class="active">
    {{/if}}
    {{#unless @first}}
        <li>
    {{/unless}}
        <div class="collapsible-header"><i class="fas fa-car-alt"></i>{{product_name}}, {{model}}</div>
        <div class="collapsible-body">
            <h4>Parts</h4>
            <ul class="parts-list">
            {{#each parts}}
            <li><a class="btn tooltipped" data-position="bottom" data-tooltip={{description}}>{{part_name}} ({{product_tag.quantity}})</a></li>
            {{/each}}
            </ul>
        </div>
    </li>
    {{/each}}
</ul>