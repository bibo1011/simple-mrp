    <a href="#" data-target="slide-out" class="sidenav-trigger" id="sidenav-trigger"><i class="fas fa-bars"></i> Menu</a>
</div>




<div class="row">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input placeholder="Placeholder" id="product_name" type="text" class="validate">
                <label for="product_name">Make</label>
            </div>
            <div class="input-field col s6">
                <input id="model" type="text" class="validate">
                <label for="model">Model</label>
            </div>
        </div>

        <div class="input-field col s12 part-select">
            <select multiple>
                {{#each parts}}
                    <option class="selected-parts" value={{part_name}}>{{part_name}}</option>
                {{/each}}
                {{!-- <option value="" disabled selected>Choose your option</option>
                
                <option value="2">Option 2</option>
                <option value="3">Option 3</option> --}}
            </select>
            <label>Select Parts</label>
        </div>
        
        
    </form>
</div>








