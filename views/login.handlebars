<form id="login-form">
    <div>
        <h3>
            Login
        </h3>
    </div>
    <div class="row">
        <div class="input-field col s4">
            <label for="email-login"><i class="fas fa-user"></i> email:</label>
            <input type="email" class="validate" id="email-login" />
        </div>
    </div>
    <div class="row">
        <div class="input-field col s4">
            <label for="password-login"><i class="fas fa-key"></i> password:</label>
            <input type="password" id="password-login" />
        </div>
    </div>
    <div>
        <button class="btn waves-effect waves-light submit-btn" type="submit">login</button>
        <a href="/signup" class="create">Create an Account</a>
    </div>
    
</form>

